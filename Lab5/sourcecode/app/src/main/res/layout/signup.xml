<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/wallpaper1"
    android:weightSum="1">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageView"
        android:src="@mipmap/profile1"
        android:layout_marginTop="33dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="38dp"
        android:layout_marginEnd="38dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:text="Register Here"
        android:textStyle="bold"
        android:textSize="30dp"
        android:background="#00000000"
        android:layout_marginBottom="30dp"
        android:layout_above="@+id/editText2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:fontFamily="sans-serif"
        android:editable="false"
        android:textColor="#000000" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/imageView"
        android:layout_marginLeft="44dp"
        android:layout_marginRight="44dp"
        android:hint="Name"
        android:drawableLeft="@mipmap/user_shape"
        android:drawablePadding="20dp"
        android:inputType="text"
        android:fontFamily="sans-serif"
        android:textColor="?attr/colorAccent" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_email"
        android:layout_marginTop="10dp"
        android:layout_marginRight="44dp"
        android:layout_below="@+id/editText2"
        android:layout_alignLeft="@+id/editText2"
        android:layout_alignStart="@+id/editText2"
        android:hint="Email Address"
        android:drawableLeft="@mipmap/email"
        android:drawablePadding="20dp"
        android:inputType="text"
        android:fontFamily="sans-serif"
        android:textColor="?attr/colorAccent" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_Pwd"
        android:layout_marginTop="10dp"
        android:layout_marginRight="44dp"
        android:layout_below="@+id/txt_email"
        android:layout_alignLeft="@+id/editText2"
        android:layout_alignStart="@+id/editText2"
        android:hint="Password"
        android:drawableLeft="@mipmap/icon1"
        android:drawablePadding="20dp"
        android:inputType="textPassword"
        android:fontFamily="sans-serif"
        android:textColor="?attr/colorAccent" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_ConfirmPwd"
        android:layout_marginTop="10dp"
        android:layout_marginRight="44dp"
        android:layout_below="@+id/txt_Pwd"
        android:layout_alignLeft="@+id/editText2"
        android:layout_alignStart="@+id/editText2"
        android:hint="Confirm Password"
        android:drawableLeft="@mipmap/icon1"
        android:drawablePadding="20dp"
        android:inputType="textPassword"
        android:fontFamily="sans-serif"
        android:textColor="?attr/colorAccent" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:id="@+id/txt_address"
        android:layout_marginTop="10dp"
        android:layout_marginRight="44dp"
        android:layout_below="@+id/txt_ConfirmPwd"
        android:layout_alignLeft="@+id/editText2"
        android:layout_alignStart="@+id/editText2"
        android:hint="Address"
        android:drawableLeft="@mipmap/user_shape"
        android:drawablePadding="20dp"
        android:ems="10"
        android:layout_alignEnd="@+id/button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:id="@+id/button"
        android:background="#000000"
        android:textColor="#FFFFFF"
        android:onClick="onClickButton"
        android:layout_below="@+id/txt_address"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp" />

    <Button
        android:text="GET ADDRESS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txt_address"
        android:id="@+id/button2"
        android:layout_alignBottom="@+id/txt_address"
        android:layout_alignEnd="@+id/txt_ConfirmPwd"
        android:background="@android:color/black"
        android:textColor="#FFFFFF" />


</RelativeLayout>
